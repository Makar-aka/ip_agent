# API credentials
API_USER=admin
API_PASS=changeme

# Порт на котором будет слушать API (uvicorn)
API_LISTEN_PORT=8000

# Порт, к которому считаем уникальные remote IP (например 22, 80, 443 и т.д.)
MONITOR_PORT=22

# Включить/выключить подсчёт IPv4 (true/false)
COUNT_IPV4=true

# Включить/выключить подсчёт IPv6 (true/false)
COUNT_IPV6=true

# Доверенные IP или CIDR (через запятую). Запросы с этих адресов не требуют Basic Auth.
# Примеры: 192.0.2.1,10.0.0.0/24,2001:db8::/32
TRUSTED_IPS=

# Xray API настройки
XRAY_API_ENABLED=false
XRAY_API_HOST=127.0.0.1
XRAY_API_PORT=10085